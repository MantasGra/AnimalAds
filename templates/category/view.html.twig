{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}


    <div class="ui main text container">

        <h1 class="ui header">{{ category.name }}</h1>
        <h3>Category information</h3>
        <p>Category description: {{ category.description }}</p>
        <p>Ads: {{ category.subscriptions.count }}</p>
        <p>Category created by: {{ category.createdBy.firstName ~ ' ' ~ category.createdBy.lastName }}</p>
        <p>Category created at: {{ category.createdAt|date('Y-m-d') }}</p>
        <a class="ui button" onclick="history.back(-1)">Go back to list</a>
    </div>

{% endblock %}
