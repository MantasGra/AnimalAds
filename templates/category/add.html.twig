{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="ui main text container">
        {% for message in app.flashes('danger') %}

            <div class="alert alert-danger" style="background-color: #ee2d4d">

                {{ message }}

            </div>

        {% endfor %}
        <h1 class="ui header">Create category</h1>
        <div class="ui divider"></div>
        {{ form_start(form, { 'attr': {'class': 'ui large form'}}) }}

        <div class="ui stacked segment">
            <div class="field">
                <div class="ui input">
                    {{ form_widget(form.name) }}
                </div>
            </div>

            <div class="field">
                <div class="ui input">
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <button class="ui fluid large teal submit button" id="login">Save</button>
        </div>

        <div class="ui error message"></div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >


        {{ form_end(form) }}
    </div>
{% endblock %}
