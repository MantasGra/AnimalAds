{% extends 'base.html.twig' %}

{% block title %}Animals!{% endblock %}

{% block body %}
    <div class="ui main text container">
        <h1 class="ui header">Boost post</h1>
        <div class="ui segment">
            <p>Boosting post: {{ ad.title }}</p>
            <p>Please select your boost options, before you proceed to payment.</p>
        </div>
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
            {% if errors.current %}
            <div class="ui negative message">
                <div class="header">There were some errors with your submission</div>
                <ul class="list">
                {% for error in errors %}
                    <li>{{ error.messageTemplate }}</li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
            <div class="ui error message"></div>
            <div class="two fields">
                <div class="field">
                    <label>Start Date</label>
                    {{ form_widget(form.dateFrom) }}
                </div>
                <div class="field">
                    <label>Duration</label>
                    {{ form_widget(form.duration, {'attr': {'class': 'ui fluid dropdown'}}) }}
                </div>
            </div>
            <div class="field">
                <label>
                    Boost type
                   <i class="small circular info icon link"></i>
                    <div class="ui special popup">
                        <p><strong>Premium boost</strong> - makes sure your advertisment is on the top of all ad lists and hightlights your ad.</p>
                        <p><strong>Basic boost</strong> - highlights your advertisment to stand out amongst others.
                    </div>
                </label>
                {{ form_widget(form.type, {'attr': {'class': 'ui fluid dropdown'}}) }}
            </div>
            <button type="submit" class="ui primary right floated button">Proceed to payment</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $('.info')
        .popup({
        inline: true,
        });
    $('.ui.dropdown').dropdown();
</script>
{% endblock %}