                <input type="text" name="payment" placeholder="Add some payment data">
            </div>
            <input type="hidden" name="type" value={{ boost.type }}>
            <input type="hidden" name="dateFrom" value={{ boost.dateFrom | date('Y-m-d')}}>
            <input type="hidden" name="duration" value={{ boost.duration }}>
