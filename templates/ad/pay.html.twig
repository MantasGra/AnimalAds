{% extends 'base.html.twig' %}

{% block title %}Animals!{% endblock %}

{% block body %}
    <div class="ui main text container">
        <h1 class="ui header">Order summary</h1>
        <div class="ui list">
            <div class="item"><strong>Boosted ad:</stong> {{ ad.title }}</div>
            <div class="item"><strong>Boost type:</strong> {{ boost.type }}</div>
            <div class="item"><strong>Start date:</strong> {{ boost.dateFrom | date() }}</div>
            <div class="item"><strong>Duration:</strong> {{ boost.duration }}</div>
            <div class="item"><strong>Total price:</strong> {{ totalPrice | number_format(2) }}â‚¬</div>
        </div>
        <form class="ui form" action="{{ path('pay_ad', {'id': ad.id}) }}">
